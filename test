<h4 class="font-medium text-gray-700">{{ __('Users with this Role') }}</h4>
                        <x-datatable
                        id="users-table"
                        ajax="{{ route('roles.show', $role->id) }}"
                        columns="[
                            {
                                key: 'name',
                                label: 'Name',
                                render(value, row) {
                                    return `<a href=/users/${row.id}>${value}</a>`;
                                }
                            },
                            {
                                key: 'email',
                                label: 'Email',
                            },
                            {
                                key: 'actions',
                                label: 'Actions',
                                width: '1',
                                render(value, row) {
                                    let roleId = @json($role->id);
                                    let authUserId = @json(auth()->user()->id);
                                    if (row.id !== authUserId) {
                                        let revokeUrl = `/roles/${roleId}/revoke/${row.id}`;
                                        return `
                                            <a
                                                href="${revokeUrl}"
                                                class="text-error-500 whitespace-nowrap hover:no-underline hover:text-error-700"
                                                title="{{ __('Revoke') }}"
                                                x-data
                                                @click.prevent="
                                                    $dispatch('open-modal', 'confirm-role-revoke');
                                                    $dispatch('set-form-revoke', {
                                                        action: '${revokeUrl}',
                                                        name: '{{ $role->name }}',
                                                        user: '${row.name}',
                                                        userId: '${row.id}'
                                                    });
                                                "
                                            >
                                                <i class='fad fa-fw fa-user-slash'></i> {{ __('Revoke') }}
                                            </a>
                                        `;
                                    }
                                    return '';
                                }
                            }
                        ]"
                    />
